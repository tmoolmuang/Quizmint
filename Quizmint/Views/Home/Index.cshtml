@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            @if (Request.IsAuthenticated && Session["MakerId"] != null)
            {
                <p>Welcome @HttpContext.Current.User.Identity.Name</p>
                @Html.ActionLink("Logout", "Logout", "Makers", null, new { @class = "btn btn-primary" })
            }
            else
            {
                <p>Please register or login</p>
                @Html.ActionLink("Register", "Registration", "Makers", null, new { @class = "btn btn-primary" })
                <span>&nbsp;</span>
                @Html.ActionLink("Login", "Login", "Makers", null, new { @class = "btn btn-primary" })
                <br />
            }
        </div>
    <div class="col-md-4">
        <h2>Get more libraries</h2>
        <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
    </div>
</div>