@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            @if (Request.IsAuthenticated && Session["MakerId"] != null)
            {
                <p>Welcome @HttpContext.Current.User.Identity.Name</p>
            }
            else
            {
                <p>Please register or login</p>
                <p>
                    @Html.ActionLink("Register", "Registration", "Makers", null, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Login", "Login", "Makers", null, new { @class = "btn btn-sm btn-primary" })
                </p>
            }
        </div>
    <div class="col-md-4">
        <h2>Online quiz maker</h2>
        <p>QuizMint is easy to use. Create an online quize and assign to a group of your students .</p>
    </div>
    <div class="col-md-4">
        <h2>Support many question types</h2>
        <p>Choose from multiple choice, True / false, or fill in the blank question.</p>
    </div>
</div>