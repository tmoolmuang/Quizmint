@model Quizmint.Models.Answer

@{
    ViewBag.Title = "Delete";
}

<h4>Are you sure you want to delete this answer choice?</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AnswerText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnswerText)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
        @Html.ActionLink("Cancel", "Index", "Answers", new { id = Session["QuestionId"] }, new { @class = "btn btn-sm btn-primary" })
    </div>
    }
</div>
