@model IEnumerable<Quizmint.Models.Question>

@{
    ViewBag.Title = "Questions";
}

<h4>Question list for : @Session["ProjectName"]</h4>

<p>
    <a href="@Url.Action("Create", "Questions")" class="btn btn-sm btn-primary">
        <i class="fa fa-plus">&nbsp;</i>
        Create New Question
    </a>
</p>
<table class="table">
    @for(int i=0; i<Model.Count(); i++) {
        var item = Model.ElementAtOrDefault(i);
        <tr>
            <td>
                @(i+1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionType.Name)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Questions", new { id = item.Id })">
                    <i class="fa fa-pencil" title="Edit"></i>
                </a>
                <span>&nbsp;&nbsp;&nbsp;</span>
                <a href="@Url.Action("Delete", "Questions", new { id = item.Id })">
                    <i class="fa fa-trash-o" title="Delete"></i>
                </a>
            </td>
        </tr>
    }
</table>
