@model IEnumerable<Quizmint.Models.Question>

@{
    ViewBag.Title = "Questions";
}

<h3>Qustion List for Project</h3>

<p>
    @Html.ActionLink("Create New", "Create", "Questions", null, new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table">
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionType.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Questions", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                @Html.ActionLink("Delete", "Delete", "Questions", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
            </td>
        </tr>
    }
</table>
