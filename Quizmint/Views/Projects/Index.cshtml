@model IEnumerable<Quizmint.Models.Project>

@{
    ViewBag.Title = "Projects";
}

<h3>Your Projects</h3>

<p>
    @Html.ActionLink("Create New", "Create", "Projects", null, new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table">
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.ProjectName, "Details", "Projects", new { id = item.Id }, new { @class = "btn btn-link" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Projects", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
            </td>
        </tr>
    }
</table>
